<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubaruParts.App.Pages.Shared.PlaceholderPage"
             Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="{Binding PageTitle}"
                   FontSize="Title"
                   FontAttributes="Bold"/>

            <Label Text="{Binding CurrentRoute, StringFormat='Route: {0}'}"
                   FontSize="Subtitle"/>

            <Label Text="Breadcrumb:" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="{Binding Breadcrumb}" TextColor="Gray"/>

            <Label Text="Query Params:" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="{Binding QueryParamsDisplay}" TextColor="Blue"/>

            <Label Text="Child Links:" FontAttributes="Bold" Margin="0,10,0,0"/>
            <StackLayout BindableLayout.ItemsSource="{Binding ChildLinks}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Title}"
                                Clicked="OnChildLinkClicked"
                                Margin="0,5"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
