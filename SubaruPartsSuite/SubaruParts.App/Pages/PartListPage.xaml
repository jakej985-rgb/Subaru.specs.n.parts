<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubaruParts.App.ViewModels"
             x:Class="SubaruParts.App.Pages.PartListPage"
             Title="{Binding Engine.Code}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto, Auto, *">
        <SearchBar Grid.Row="0"
                   Placeholder="Search parts..."
                   Text="{Binding SearchQuery}"
                   SearchCommand="{Binding PerformSearchCommand}"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   TextColor="{StaticResource PrimaryTextColor}"/>

        <ScrollView Grid.Row="1" Orientation="Horizontal" Margin="10,5">
            <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Categories}" Spacing="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding .}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PartListViewModel}}, Path=PerformSearchCommand}"
                                Clicked="OnCategoryClicked"
                                BackgroundColor="{StaticResource PrimaryColor}"
                                TextColor="White"
                                CornerRadius="15"
                                Padding="15,0"
                                HeightRequest="35"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Parts}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding PartSelectedCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource CardStyle}">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource PrimaryTextColor}"/>
                                <Label Text="{Binding OemNumber}"
                                       FontSize="14"
                                       TextColor="{StaticResource AccentColor}"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="{Binding Category}"
                                   VerticalOptions="Center"
                                   FontSize="12"
                                   TextColor="{StaticResource SecondaryTextColor}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
