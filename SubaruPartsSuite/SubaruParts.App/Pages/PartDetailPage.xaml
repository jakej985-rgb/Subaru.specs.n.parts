<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubaruParts.App.ViewModels"
             x:Class="SubaruParts.App.Pages.PartDetailPage"
             Title="Part Details"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">

            <!-- Header -->
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout>
                    <Label Text="{Binding Part.Name}" FontSize="28" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}"/>
                    <Label Text="{Binding Part.Category}" FontSize="16" TextColor="{StaticResource SecondaryTextColor}"/>
                    <Label Text="{Binding Part.OemNumber}" FontSize="20" TextColor="{StaticResource AccentColor}" Margin="0,10,0,0"/>
                    <Label Text="{Binding Part.Notes}" FontSize="14" TextColor="{StaticResource PrimaryTextColor}" Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Store Buttons -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="AutoZone" BackgroundColor="#E05d0e" Command="{Binding OpenStoreCommand}" CommandParameter="AutoZone"/>
                <Button Grid.Column="1" Text="O'Reilly" BackgroundColor="#228B22" Command="{Binding OpenStoreCommand}" CommandParameter="OReilly"/>
                <Button Grid.Column="2" Text="NAPA" BackgroundColor="#003366" Command="{Binding OpenStoreCommand}" CommandParameter="NAPA"/>
            </Grid>

            <!-- Specs -->
            <Label Text="Specifications" Style="{StaticResource HeaderLabelStyle}"/>
            <CollectionView ItemsSource="{Binding Specs}" HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *, Auto" Padding="5">
                            <Label Grid.Column="0" Text="{Binding Key}" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}"/>
                            <HorizontalStackLayout Grid.Column="2" Spacing="5">
                                <Label Text="{Binding Value}" TextColor="{StaticResource SecondaryTextColor}"/>
                                <Label Text="{Binding Unit}" TextColor="{StaticResource SecondaryTextColor}"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Cross Refs -->
            <Label Text="Aftermarket / Cross Ref" Style="{StaticResource HeaderLabelStyle}"/>
            <CollectionView ItemsSource="{Binding CrossRefs}" HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5" BackgroundColor="{StaticResource CardBackgroundColor}" BorderColor="Transparent">
                            <Grid ColumnDefinitions="*, *">
                                <Label Grid.Column="0" Text="{Binding Brand}" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}"/>
                                <Label Grid.Column="1" Text="{Binding AftermarketNumber}" TextColor="{StaticResource AccentColor}" HorizontalOptions="End"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Supersessions -->
            <Label Text="Supersessions" Style="{StaticResource HeaderLabelStyle}"/>
            <CollectionView ItemsSource="{Binding Supersessions}" HeightRequest="100">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding OldOemNumber, StringFormat='Old: {0}'}" TextColor="{StaticResource SecondaryTextColor}"/>
                            <Label Text="{Binding NewOemNumber, StringFormat='New: {0}'}" TextColor="{StaticResource SecondaryTextColor}"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
