<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubaruParts.App.ViewModels"
             x:Class="SubaruParts.App.Pages.CompatibilityPage"
             Title="Engine Compatibility">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Engine Swap Compatibility"
                   FontSize="Title"
                   FontAttributes="Bold" />

            <!-- Donor Selection -->
            <Label Text="Donor Engine (The engine going IN)" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding Engines}"
                    ItemDisplayBinding="{Binding Code}"
                    SelectedItem="{Binding SelectedDonor}"
                    Title="Select Donor Engine" />

            <!-- Target Selection -->
            <Label Text="Target Engine/Chassis (The car receiving it)" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding Engines}"
                    ItemDisplayBinding="{Binding Code}"
                    SelectedItem="{Binding SelectedTarget}"
                    Title="Select Target Engine/Chassis" />

            <Button Text="Check Compatibility"
                    Command="{Binding CheckCompatibilityCommand}"
                    BackgroundColor="#00AAFF"
                    TextColor="White"
                    CornerRadius="8" />

            <!-- Results -->
            <Grid IsVisible="{Binding IsResultVisible}">
                <Frame BorderColor="{Binding ResultColor}"
                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding Result.Level}"
                               TextColor="{Binding ResultColor}"
                               FontSize="Header"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />

                        <Label Text="{Binding Result.Explanation}"
                               TextType="Text" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
