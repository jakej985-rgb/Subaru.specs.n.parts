<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubaruParts.App.Pages.Browse.Engine.EngineSelectPage"
             Title="Select Engine">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Engine Selection" FontSize="Title" FontAttributes="Bold"/>
            <Label Text="This is a dummy engine selection page." />

            <Picker x:Name="FamilyPicker" Title="Engine Family">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>EJ</x:String>
                        <x:String>EZ</x:String>
                        <x:String>FB</x:String>
                        <x:String>FA</x:String>
                    </x:Array>
                </Picker.ItemsSource>
                <Picker.SelectedIndex>0</Picker.SelectedIndex>
            </Picker>

            <Picker x:Name="PhasePicker" Title="Phase">
                 <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                    </x:Array>
                </Picker.ItemsSource>
                <Picker.SelectedIndex>1</Picker.SelectedIndex>
            </Picker>

            <Picker x:Name="EngineCodePicker" Title="Engine Code">
                 <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>EJ251</x:String>
                        <x:String>EJ205</x:String>
                        <x:String>EJ257</x:String>
                    </x:Array>
                </Picker.ItemsSource>
                <Picker.SelectedIndex>0</Picker.SelectedIndex>
            </Picker>

            <Button Text="Go to Engine Page" Clicked="OnGoClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
